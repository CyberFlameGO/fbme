test case SystemItemParser extends <none> {
  /*package*/ SystemItemParser itemParser;

  beforeTest {
    itemParser = new SystemItemParser();
  }

  <<after test>>


  test eventPort {
    final SystemItem item = itemParser.parse("rootFb.fb.event_eventPort");
    assert SystemItemType.EVENT_PORT equals item.getType();
    assert true Arrays.equals(new string[]{"fb"}, item.getFbNames());
    assert "eventPort" equals item.getItemName();
  }


  test dataPort {
    final SystemItem item = itemParser.parse("rootFb.fb.varPort");
    assert SystemItemType.DATA_PORT equals item.getType();
    assert true Arrays.equals(new string[]{"fb"}, item.getFbNames());
    assert "varPort" equals item.getItemName();
  }


  test ecc {
    final SystemItem item = itemParser.parse("rootFb.fb.Q_smv");
    assert SystemItemType.ECC equals item.getType();
    assert true Arrays.equals(new string[]{"fb"}, item.getFbNames());
    assert "ECC" equals item.getItemName();
  }
}